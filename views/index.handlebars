<h1>Burgers!</h1>
<h2>Burgers that haven't been eaten up yet!</h2>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
        <form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour It!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>
<h2>Burgers that are in my stomach now!</h2>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
        <form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <!-- <button type="submit">Devour it!</button> -->
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>
<h2>Add a Burger</h2>
<form class="create-update-form" action="/burgers/create" method="POST">
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <div class="form-group">
    <label for="slee">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devour it!<br>
    <input type="radio" name="devoured" value="0"> Save me for later...
  </div>
  <button type="submit">Add Burger</button>
</form>
